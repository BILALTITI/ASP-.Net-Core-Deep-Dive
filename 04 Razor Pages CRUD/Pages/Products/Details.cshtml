@model M01.ModelAndInMemoryStoreSetup.Model.Product

@{
    ViewData["Title"] = "Details";
}

<h1 class="mb-4">Product Details</h1>

@if (Model != null)
{
    <dl class="row">
        <dt class="col-sm-2">Id</dt>
        <dd class="col-sm-10">@Model.Id</dd>

        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">Price</dt>
        <dd class="col-sm-10">@Model.Price.ToString("C")</dd>
    </dl>

    <div class="mt-3">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning me-2">Edit</a>
        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger me-2">Delete</a>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
}
else
{
    <div class="alert alert-danger">
        Product not found.
    </div>
}
